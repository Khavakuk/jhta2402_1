<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.desk8432.project">
    <select id="getMember" resultType="MemberDTO" parameterType="string">
        select * from jhta01_member where username = #{username}
    </select>
    <insert id="insertMember" parameterType="MemberDTO">
        INSERT INTO JHTA01_MEMBER values(
        MEMBER_SEQ.nextval,
        #{username},
        #{nickname},
        #{email},
        #{password},
        #{imageUrl},
        #{introduction},
        sysdate,
        sysdate)
    </insert>
</mapper>